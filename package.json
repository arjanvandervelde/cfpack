{
	"name": "cfpack.js",
	"version": "1.2.0",
	"description": "A CLI tool that helps to build CloudFormation template using multiple smaller templates.",
	"author": "Eugene Manuilov <eugene.manuilov@gmail.com>",
	"license": "MIT",
	"main": "index.js",
	"bin": {
		"cfpack": "./bin/cfpack.js"
	},
	"homepage": "https://github.com/eugene-manuilov/cfpack#readme",
	"bugs": {
		"url": "https://github.com/eugene-manuilov/cfpack/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eugene-manuilov/cfpack.git"
	},
	"engines": {
		"node": ">=8.6.0"
	},
	"keywords": [
		"aws",
		"cloudformation",
		"cf"
	],
	"files": [
		"*.md",
		"LICENSE",
		"bin/",
		"commands/",
		"src/"
	],
	"scripts": {
		"lint": "eslint src commands bin",
		"prepublish": "npm run lint"
	},
	"dependencies": {
		"aws-sdk": "^2.476.0",
		"chalk": "^2.4.2",
		"glob": "^7.1.4",
		"js-yaml": "^3.13.1",
		"node-native-zip": "^1.1.0",
		"ora": "^3.4.0",
		"yargs": "^12.0.5",
		"yargs-interactive": "^2.1.0"
	},
	"devDependencies": {
		"eslint": "^5.16.0",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-plugin-import": "^2.17.3"
	},
	"eslintConfig": {
		"extends": [
			"airbnb-base",
			"plugin:import/errors",
			"plugin:import/warnings"
		],
		"env": {
			"node": true
		},
		"plugins": [
			"import"
		],
		"rules": {
			"no-plusplus": 0,
			"no-tabs": 0,
			"indent": [
				2,
				"tab",
				{
					"SwitchCase": 1
				}
			],
			"padded-blocks": [
				2,
				{
					"classes": "always"
				}
			],
			"global-require": 0,
			"import/no-dynamic-require": 0
		}
	}
}
