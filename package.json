{
	"name": "cfpack.js",
	"version": "2.0.0",
	"description": "A CLI tool that helps to build CloudFormation template using multiple smaller templates.",
	"author": "Eugene Manuilov <eugene.manuilov@gmail.com>",
	"license": "MIT",
	"main": "index.js",
	"bin": {
		"cfpack": "./bin/cfpack.js"
	},
	"homepage": "https://github.com/eugene-manuilov/cfpack#readme",
	"bugs": {
		"url": "https://github.com/eugene-manuilov/cfpack/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eugene-manuilov/cfpack.git"
	},
	"engines": {
		"node": ">=8.6.0"
	},
	"keywords": [
		"aws",
		"cloudformation",
		"cf"
	],
	"files": [
		"*.md",
		"LICENSE",
		"bin/",
		"commands/",
		"src/"
	],
	"scripts": {
		"test": "jest",
		"lint": "eslint src commands bin",
		"lint:fix": "npm run lint --silent -- --fix",
		"prepublish": "npm run lint --silent"
	},
	"dependencies": {
		"aws-sdk": "^2.700.0",
		"chalk": "^3.0.0",
		"glob": "^7.1.6",
		"js-yaml": "^3.14.0",
		"node-native-zip": "^1.1.0",
		"ora": "^4.0.4",
		"yargs": "^15.3.1",
		"yargs-interactive": "^3.0.0"
	},
	"devDependencies": {
		"eslint": "^7.2.0",
		"eslint-config-airbnb-base": "^14.2.0",
		"eslint-plugin-import": "^2.21.2",
		"jest": "^26.0.1"
	},
	"eslintConfig": {
		"extends": [
			"airbnb-base",
			"plugin:import/errors",
			"plugin:import/warnings"
		],
		"env": {
			"node": true
		},
		"plugins": [
			"import"
		],
		"rules": {
			"no-plusplus": 0,
			"no-tabs": 0,
			"indent": [
				2,
				"tab",
				{
					"SwitchCase": 1
				}
			],
			"padded-blocks": [
				2,
				{
					"classes": "always"
				}
			],
			"global-require": 0,
			"import/no-dynamic-require": 0
		}
	},
	"jest": {
		"testEnvironment": "node",
		"testMatch": [
			"<rootDir>/__tests__/**/[^_]*.js"
		],
		"verbose": true
	}
}
