{
	"extends": [
		"airbnb-base",
		"plugin:import/errors",
		"plugin:import/warnings"
	],
	"env": {
		"node": true,
		"jest": true
	},
	"plugins": [
		"import"
	],
	"rules": {
		"no-plusplus": 0,
		"no-tabs": 0,
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"padded-blocks": [
			2,
			{
				"classes": "always"
			}
		],
		"global-require": 0,
		"import/no-dynamic-require": 0
	}
}